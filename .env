# Configuración de la base de datos PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/glosas_pro

# Clave secreta para sesiones y tokens
SECRET_KEY=tu-clave-secreta-cambia-en-produccion

# Configuración de entorno
FLASK_APP=app.py
FLASK_ENV=development

# Configuración de correo para envío de notificaciones
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=usuario@ejemplo.com
MAIL_PASSWORD=tu-contraseña-segura
MAIL_DEFAULT_SENDER=GlosasPro <noreply@glosaspro.com>

# Configuración para almacenamiento de archivos
# Opciones: local, s3, azure
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./storage
# Si se usa S3
# AWS_ACCESS_KEY_ID=tu-clave-de-acceso
# AWS_SECRET_ACCESS_KEY=tu-clave-secreta
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=glosas-pro-bucket

# Configuración de API Graph para Office 365 (para monitoreo de correo)
# MS_GRAPH_CLIENT_ID=tu-client-id
